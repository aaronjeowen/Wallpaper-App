<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/headerimage"></ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageHeader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userNameHeader"
        android:layout_marginTop="34dp"
        android:src="@drawable/common_google_signin_btn_text_dark_normal_background" />

    <TextView
        android:id="@+id/userNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userImageHeader"
        android:layout_marginStart="15dp"
        android:text="My header title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/userEmailHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userNameHeader"
        android:layout_below="@+id/userNameHeader"
        android:text="My header title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>